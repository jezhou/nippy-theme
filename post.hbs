{{!< default}}

{{#post}}

<main class="container nippy-post" role="main">
    <article class="{{post_class}}">

      <div class="row nippy-post-header">
        <div class="col-sm-8">
            <h1>{{title}}</h1>
            <section class="nippy-post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
            </section>
        </div>
      </div>

      <section class="post-content">
          {{content}}
      </section>

      {{> "post_footer"}}
    </article>
</main>

{{/post}}
