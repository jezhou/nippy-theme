{{!< default}}
  {{!-- The main content area on the homepage --}}
  <main class="nippy-index" role="main">
      {{> 'sidebar'}}
      <div class="content container">
        {{!-- The tag below includes the post loop - partials/loop.hbs --}}
        {{#author}}
          <div class="nippy-author-container">
            <div class="nippy-author-header">
              <div class="row">
                <div class="col-xs-4 nippy-author-profile-image"
                style="background-image: url('{{image}}')"></div>
                <div class="col-xs-8 nippy-author-cover-image" style="background-image: url('{{cover}}')">
                  <h3>{{name}}</h3 >
                </div>
              </div>
              <div class="row">
                <div class="col-xs-4"></div>
                {{#if website}}
                <div class="col-xs-2 nippy-author-meta">
                  <h6><a href="{{website}}">Website</a></h6>
                </div>
                {{/if}}
                {{#if facebook}}
                <div class="col-xs-2 nippy-author-meta">
                  <h6><a href="{{facebook}}">Facebook</a></h6>
                </div>
                {{/if}}
                {{#if twitter}}
                <div class="col-xs-2 nippy-author-meta">
                  <h6><a href="{{twitter}}">Twitter</a></h6>
                </div>
                {{/if}}
              </div>
            </div>
            {{#if bio}}
              <div class="nippy-author-bio">
                <div class="nippy-author-bio-description">
                  <h4>{{bio}}</h4>
                </div>
              </div>
            {{/if}}
          </div>
        {{/author}}

        <h3 style="text-align:center;margin-top:30px;margin-bottom:30px">Things I've Written</h3>
        {{> "loop"}}
      </div>
  </main>
